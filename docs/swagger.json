{
  "swagger": "2.0",
  "info": {
    "description": "HTTP API for utility management",
    "title": "HTTP-server for \"Modbus emulator\"",
    "version": "1.1.0"
  },
  "basePath": "/modbus-emulator",
  "schemes": [
    "http"
  ],
  "paths": {
    "/settings": {
      "get": {
        "tags": [
          "Settings"
        ],
        "description": "Get list of settings for all working servers",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "Success",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/ServersData"
              }
            }
          }
        }
      }
    },
    "/settings/emulation_mode": {
      "post": {
        "tags": [
          "Settings"
        ],
        "description": "Update \"one-time emulation mode\" parameter for all working servers",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "one-time",
            "in": "query",
            "required": true,
            "description": "Must be \"true\" or \"false\"",
            "type": "boolean"
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/ServersData"
              }
            }
          }
        }
      }
    },
    "/settings/{server}": {
      "get": {
        "tags": [
          "Settings"
        ],
        "description": "Get settings for working server",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "server",
            "in": "path",
            "required": true,
            "type": "integer"
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "schema": {
              "$ref": "#/definitions/Server"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "Server": {
      "type": "object",
      "properties": {
        "is_working": {
          "type": "boolean"
        },
        "dump_socket": {
          "type": "string"
        },
        "real_socket": {
          "type": "string"
        },
        "protocol": {
          "type": "string"
        },
        "one_time_emulation": {
          "type": "boolean"
        },
        "start_time": {
          "type": "string"
        },
        "end_time": {
          "type": "string"
        },
        "current_time": {
          "type": "string"
        }
      }
    },
    "ServersData": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer"
        },
        "settings": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Server"
          }
        }
      }
    }
  }
}